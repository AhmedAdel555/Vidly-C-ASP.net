@model List<Vidly_MVC_project.Models.Movie>
@{
    ViewBag.Title = "movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Movies</h2>
@using (Html.BeginForm("MovieForm", "Movie"))
{
    <button type="submit" class="btn btn-primary"> new Movie </button>
}

@if (Model.Count == 0)
{
    <h2> No Movies </h2>
}
else
{
    <table>
        <thead>
        <th>Movies</th>
        <th>Genre</th>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                string url = $"/movies/details/{Model[i].Id}";
                string url2 = $"/movies/edit/{Model[i].Id}";
                <tr>
                    <td> <a href=@url>@Model[i].Title</a> </td>
                    <td> @Model[i].Genre.Name </td>
                    <td> <a href=@url2>Edit</a> </td>
                </tr>
            }
        </tbody>
    </table>
}

